import os
from colorama import init, Fore, Style

init(autoreset=True)

def clear():
    # Limpiar la consola
    os.system('clear') 
    os.system('cls')

while True:
    clear()
    print("-"*35)
    print("1. Ordenar n칰meros pares e impares. ")
    print("2. Ordenar n칰meros de mayor a menor. ")
    print("3. Convertir en c칩digo binario. ")
    print("4. Salir.")
    print("-"*35)

    try:
        op = int(input("Seleccione una opci칩n: "))
    except ValueError:
        print(Fore.RED+"Ingrese un n칰mero v치lido.\n")
        continue

    match op: 
        case 1:
            clear()
            #ejercicio1
        
        case 2:
            clear()
            #ejercicio2

        case 3:
            clear()
            #ejercicio 3
        case 4:
            print(Fore.CYAN+"\nSaliendo del editor de texto.")
            print(Fore.CYAN+"Gracias por usar el programa. 춰Hasta luego! 游녦")
                
            break
            
        case _:
            print(Fore.RED+"Opci칩n no v치lida. Intenta de nuevo.")
